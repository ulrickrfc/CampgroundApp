<%- include('../partials/header'); -%>

<div class="container">
    <div class="jumbotron">
		<div class="container">
		    <h1>Welcome to YelpCamp!</h1>	
		    <p>view everything from this site</p>
		    <p>
		    	<a href="/campgrounds/new" class="btn btn-primary btn-lg">Creat new Campground</a>
			</p>
		</div>
	</div>

	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		
		<% for(var i=0; i<campgrounds.length; i++){ %>

		<div class="col-md-3 col-sm-6">
				<div class="thumbnail" >
					 <img src="<%= campgrounds[i].imagem %>">
					 <div class="caption">
						<h4><%= campgrounds[i].name %></h4>
					</div>
					<p>
						<a class="btn btn-primary" href="/campgrounds/<%= campgrounds[i]._id %>">More info</a>
					</p>
			
				</div>	

		</div>
		<% } %>

	</div>
</div>

	
<%- include('../partials/footer'); -%>
